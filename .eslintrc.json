{
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "extends": [
    "react-tools",
    "eslint:recommended"
  ],
  "rules": {
    // indent のルールがあるとfixが失敗するため、一時的にコメントアウトしている
    // "indent": [
    //   2,
    //   2
    // ],
    "quotes": [
      2,
      "double"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "jsx-a11y/anchor-is-valid": [0]
  }
}
